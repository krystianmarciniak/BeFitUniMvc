<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeFitUniMvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" 
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BeFitUniMvc.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BeFitUniMvc</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    @{
                        // helper do ustawiania klasy "active" na aktualnym linku
                        string Active(string controller, string action = "Index")
                        {
                            var c = ViewContext.RouteData.Values["controller"]?.ToString();
                            var a = ViewContext.RouteData.Values["action"]?.ToString();
                            return string.Equals(c, controller, StringComparison.OrdinalIgnoreCase)
                                && string.Equals(a, action, StringComparison.OrdinalIgnoreCase)
                                ? "active" : "";
                        }
                    }

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex align-items-center gap-1 @Active("Home")"
                               asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i>
                                Strona główna
                            </a>
                        </li>
                    
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex align-items-center gap-1 @Active("TrainingSessions")"
                               asp-controller="TrainingSessions" asp-action="Index">
                                <i class="bi bi-calendar-week"></i>
                                Sesje
                            </a>
                        </li>
                    
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex align-items-center gap-1 @Active("PerformedExercises")"
                               asp-controller="PerformedExercises" asp-action="Index">
                                <i class="bi bi-clipboard-check"></i>
                                Wykonane ćwiczenia
                            </a>
                        </li>
                    
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark d-flex align-items-center gap-1 @Active("ExerciseTypes")"
                                   asp-controller="ExerciseTypes" asp-action="Index">
                                    <i class="bi bi-journal-text"></i>
                                    Rodzaje ćwiczeń
                                    @* Link tylko dla Admina *@
                                </a>
                            </li>
                        }
                
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex align-items-center gap-1 @Active("Statistics")"
                               asp-controller="Statistics" asp-action="Index">
                                <i class="bi bi-graph-up"></i>
                                Statystyki
                            </a>
                        </li>
                    </ul>         
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BeFitUniMvc - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
