@model BeFitUniMvc.Models.StatsVm

@{
    ViewData["Title"] = "Statystyki";
}

<h2>Statystyki</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <label class="form-label">Od</label>
        <input type="date" name="from" class="form-control"
               value="@(Model.From?.ToString("yyyy-MM-dd"))" />
    </div>
    <div class="col-auto">
        <label class="form-label">Do</label>
        <input type="date" name="to" class="form-control"
               value="@(Model.To?.ToString("yyyy-MM-dd"))" />
    </div>
    <div class="col-auto align-self-end">
        <button class="btn btn-primary" type="submit">Filtruj</button>
    </div>
</form>

<div class="row mb-3">
    <div class="col-md-3">
        <div class="card p-3">
            <div class="small text-muted">Łącznie ćwiczeń</div>
            <div class="h4">@Model.TotalExercises</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card p-3">
            <div class="small text-muted">Łączny wolumen</div>
            <div class="h4">@Model.TotalVolume</div>
        </div>
    </div>
</div>

<h4>Top ćwiczenia</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Ćwiczenie</th>
            <th>Sesje</th>
            <th>Zestawy</th>
            <th>Powtórzenia</th>
            <th>Wolumen</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var e in Model.TopExercises)
    {
        <tr>
            <td>@e.Exercise</td>
            <td>@e.Sessions</td>
            <td>@e.Sets</td>
            <td>@e.Reps</td>
            <td>@e.Volume</td>
        </tr>
    }
    </tbody>
</table>
